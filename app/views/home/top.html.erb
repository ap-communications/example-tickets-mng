<% content_for :html_header do %>
  <%= javascript_pack_tag 'application' %>
  <%= javascript_pack_tag 'top' %>
<% end %>

<div class="search-box">
  <%= form_tag(home_top_path, method: :get) do %>
    <div class="control">
      <%= text_field_tag :search_word, @search_word, class: "input", id: "search_word" %>
    </div>
    <div class="control">
      <%= button_tag "Submit", class: "button", id: "search" %>
    </div>
  <% end %>
</div>

<div id="grid" style="height: 300px;" />
