<% content_for :html_header do %>
  <%= javascript_pack_tag 'application' %>
  <%= javascript_pack_tag 'top' %>
<% end %>

<div>
  <%= form_tag(home_top_path, method: :get) do %>
    <div class="control">
      <%= text_field_tag :search_word, @search_word, class: "input" %>
    </div>
    <div class="control">
      <%= submit_tag "Submit", class: "button is-info" %>
    </div>
  <% end %>
</div>

<table style="border: solid 1px;" border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Issue Category</th>
      <th>Author</th>
      <th>Assigned To</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each { |issue| %>
    <tr>
      <td><%= issue.title %></td>
      <td><%= issue.body %></td>
      <td><%= issue.issue_category.name %></td>
      <td><%= issue.author.name %></td>
      <td><%= issue.assigned_to&.name %></td>
      <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<div id="grid" />
